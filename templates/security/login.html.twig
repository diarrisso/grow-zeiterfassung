{% extends 'base.html.twig' %}
{% block title %}Loggen Sie sich ein!{% endblock %}
{% block body %}
    <div class="bloc-form">
        <img src="{{ asset('images/grow.svg') }}" width="400" height="100" class="logo" alt="logo-grow">
        <div class="row">
            <div class="col-10 col-md-6  col-lg-3 mx-auto">
                <form method="post" class="mt-4">
                    <div class="form-group">
                        <div class="form-floating mb-3">
                            <input type="email" value="{{ last_username }}" name="email"
                                   id="inputEmail" class="form-control" autocomplete="email"
                                   required autofocus placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-floating mb-3">
                            <input type="password" name="password" id="inputPassword"
                                   class="form-control" autocomplete="current-password"
                                   required placeholder="Password">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn  btn-sm btn-lg btn-primary" type="submit">
                        Anmelden
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
